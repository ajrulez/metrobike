<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="horizontal"
        android:layout_marginBottom="15dip"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button_go_to_search"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:onClick="goToSearchPage"
            android:text="@string/button_go_to_search"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_detail"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".34"
            android:onClick="goToDetail"
            android:text="@string/button_go_to_detail"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_navigate"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:onClick="goToNavigate"
            android:text="@string/button_navigate"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:id="@+id/scrollView1" 
	    android:orientation="vertical"
	    android:layout_gravity="left|center" 
	    android:layout_width="90dp" 
	    android:layout_height="216dp">

                <LinearLayout 
                    android:layout_width="fill_parent" 
                    android:id="@+id/linearLayout2" 
                    android:orientation="vertical" 
                    android:layout_height="wrap_content">
	                      <Button
	                       android:id="@+id/btnAll"
	                       android:layout_height="wrap_content"
	                       android:layout_width="fill_parent"
	                       android:text="Route1"/> 
	                      <Button
	                       android:id="@+id/btnBarAndRes"
	                       android:layout_height="wrap_content"
	                       android:layout_width="fill_parent"
	                       android:text="Route2"/> 
	                      <Button
	                       android:id="@+id/btnFashion"
	                       android:layout_height="wrap_content"
	                       android:layout_width="fill_parent"
	                       android:text="Route3"/> 
	                      <Button
	                       android:id="@+id/btnParty"
	                       android:layout_height="wrap_content"
	                       android:layout_width="fill_parent"
	                       android:text="All4"/> 
	                       <Button
	                       android:id="@+id/btnLife"
	                       android:layout_height="wrap_content"
	                       android:layout_width="fill_parent"
	                       android:text="All5"/> 

	            </LinearLayout>
	</ScrollView>

</FrameLayout>