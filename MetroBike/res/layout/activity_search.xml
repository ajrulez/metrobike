<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity" >

    <ImageView
        android:id="@+id/imageViewA"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignBottom="@+id/editTextStartFrom"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/a" />

    <ImageView
        android:id="@+id/imageViewB"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignBottom="@+id/editTextTo"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/b" />

    <EditText
        android:id="@+id/editTextTo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/imageViewA"
        android:layout_toLeftOf="@+id/imageButtonReverse"
        android:layout_toRightOf="@+id/imageViewB"
        android:background="@drawable/blue_border"
        android:ems="10"
        android:hint="@string/edittext_hint_to"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextStartFrom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageButtonReverse"
        android:layout_marginBottom="14dp"
        android:layout_toLeftOf="@+id/imageButtonReverse"
        android:layout_toRightOf="@+id/imageViewA"
        android:background="@drawable/blue_border"
        android:ems="10"
        android:hint="@string/edittext_hint_startfrom"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/imageButtonReverse"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/ImageButtonSearch"
        android:adjustViewBounds="true"
        android:contentDescription="@string/button_reverse_desc"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/reverse" />

    <ImageButton
        android:id="@+id/ImageButtonSearch"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButtonReverse"
        android:adjustViewBounds="true"
        android:contentDescription="@string/button_search_desc"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/search" />

</RelativeLayout>